{
  "productName": "Confidant",
  "version": "0.1.0",
  "identifier": "com.confidant",
  "build": {
    "beforeDevCommand": "npm run vite",
    "beforeBuildCommand": "npm run build:frontend",
    "devUrl": "http://localhost:1420",
    "frontendDist": "../dist"
  },
  "app": {
    "windows": [
      {
        "title": "Confidant - Offline AI Assistant",
        "width": 1200,
        "height": 800,
        "resizable": true,
        "fullscreen": false
      }
    ],
    "security": {
      "csp": null,
      "capabilities": ["default"]
    }
  },
  "bundle": {
    "active": true,
    "targets": "all",
    "icon": [
      "icons/icon.icns",
      "icons/icon.ico",
      "icons/32x32.png",
      "icons/128x128.png",
      "icons/128x128@2x.png",
      "icons/icon.png"
    ],
    "resources": {"resources/": ""},
    "externalBin": [],
    "copyright": "",
    "category": "Productivity",
    "shortDescription": "Privacy-first offline mental health companion",
    "longDescription": "Confidant is a privacy-first, offline AI companion for mental health support. All processing happens locally on your device with no internet connection required."
  },
  "plugins": {}
}
